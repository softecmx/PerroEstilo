<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.cliente.inicio.HomeClienteFragment"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="0dp"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:boxBackgroundMode="outline"
                    app:startIconDrawable="@drawable/ic_search_black_24dp"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:endIconMode="clear_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editBuscConsultarID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Buscar"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </LinearLayout>
        <org.imaginativeworld.whynotimagecarousel.ImageCarousel
            android:id="@+id/carruselInicio"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            app:autoPlay="true"
            app:showTopShadow="false"
            app:topShadowAlpha="0"
            app:bottomShadowAlpha="0"
            app:topShadowHeight="0dp"
            app:autoPlayDelay="3000"
            app:imageScaleType="centerCrop"
            app:showNavigationButtons="false"
            />

        <org.imaginativeworld.whynotimagecarousel.ImageCarousel
            android:id="@+id/carruselComentarios"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="16dp"
            app:carouselGravity="START"
            app:carouselPaddingEnd="8dp"
            app:carouselPaddingStart="8dp"
            app:carouselType="SHOWCASE"
            app:showBottomShadow="false"
            app:showCaption="false"
            app:showIndicator="false"
            app:showNavigationButtons="false"
            app:showTopShadow="false"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/gray_400"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="8dp">
                <ImageView
                    android:id="@+id/iBtnRedFace"
                    android:layout_width="24dp"
                    android:src="@drawable/facebook"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_height="24dp"
                    android:contentDescription="@string/txtDescImg"
                    />
                <ImageView
                    android:id="@+id/iBtnRedInsta"
                    android:layout_width="24dp"
                    android:src="@drawable/instagram"
                    android:layout_height="24dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:contentDescription="@string/txtDescImg"
                    />
                <ImageView
                    android:layout_width="24dp"
                    android:src="@drawable/youtube"
                    android:layout_height="24dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:contentDescription="@string/txtDescImg"
                    />
                <ImageView
                    android:id="@+id/iBtnRedGit"
                    android:layout_width="24dp"
                    android:src="@drawable/github"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_height="24dp"
                    android:contentDescription="@string/txtDescImg"
                    />
                <ImageView
                    android:layout_width="24dp"
                    android:src="@drawable/gmail"
                    android:layout_height="24dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:contentDescription="@string/txtDescImg"
                    />


            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="@string/txtDerechos"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>