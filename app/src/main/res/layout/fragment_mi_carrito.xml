    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cliente.carrito.miCarrito.MiCarritoFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="15dp"
