<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.administrador.matchs.buscarMatch.BuscarMatchFragment">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:endIconMode="clear_text">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etBKid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/idKit"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageButton
                android:id="@+id/btnBKbusca"
                android:layout_width="109dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:elevation="4dp"
                android:backgroundTint="@color/pink_200"
                android:contentDescription="@string/txtDescripcion"
                app:srcCompat="@drawable/ic_search_black_24dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/imvBKim1"
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:src="@drawable/ic_menu_gallery" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imvBKim2"
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_menu_gallery" />
                <ImageView
                    android:id="@+id/imvBKim3"
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_menu_gallery" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tvBKnomkit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/nomkit"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/tvBKprecio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/precio"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/tvBKmodelo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/mod"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/tvBKdescuento"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/descu"
        android:textSize="16dp"/>
        <TextView
            android:id="@+id/tvBKproductos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/txtProductos"
            android:textSize="16dp"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/flBKframe"/>
    </LinearLayout>
</ScrollView>