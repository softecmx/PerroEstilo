<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/txtPreparandoPedido"
        android:textColor="@color/orange"
        android:textSize="20dp"
        android:textStyle="bold" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtFechaLlegadaEstimadaPreparandoPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtFechaEstimada"
            android:textStyle="bold"
            android:textColor="@color/orange"/>
        <TextView
            android:id="@+id/fechalimitePago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fechaLimite"
            android:layout_toEndOf="@id/txtFechaLlegadaEstimadaPreparandoPedido"
            android:textStyle="bold" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtNoOrdenPedidoPreparando"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtOrden"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/txtOrdePagoPendiente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtNumeral"
                android:layout_toEndOf="@id/txtNoOrdenPedidoPreparando"
                android:layout_marginLeft="250dp"
                android:textSize="20dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtNoSeriePedidoPreparando"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtNoSerie"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/txtSeriePreparando"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtNoSerie"
                android:layout_toEndOf="@id/txtNoSeriePedidoPreparando"
                android:layout_marginLeft="200dp"
                android:textSize="20dp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>