<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorOnPrimary"
    tools:context=".ui.cliente.productos.ticket.TicketFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Ticket de compra"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="italic" />
            <TextView
                android:id="@+id/txtComprarAhoraTotalPagar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Gracias por tu compra"
                android:gravity="center"
                android:textColor="@color/flat_grey_dark_1"
                android:textSize="28sp"
                android:textStyle="bold" />
        </LinearLayout>
          <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
              android:backgroundTint="#94FFA1E7"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No. Orden: "
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:id="@+id/txtTicketOrden"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9876567834"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No.Serie: "
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:id="@+id/txtTicketSerie"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9876567834DSDFS"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha del pedido: "
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/txtTicketFechaPedido"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="18/10/2021"/>
                </LinearLayout>

            </LinearLayout>
          </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Detalle de compra"
                    android:background="#94FFA1E7"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ListView
                        android:id="@+id/lstViewTicketCarrito"
                        android:layout_width="match_parent"
                        android:layout_height="226dp" />
                </FrameLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total: "
                        android:background="#94FFA1E7"
                        android:padding="10dp"
                        android:gravity="end"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:id="@+id/txtTicketTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$$$$"
                        android:background="#94FFA1E7"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Detalle de entrega"
                    android:background="#94FFA1E7"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estimado para el  "
                        android:paddingLeft="10dp"
                        android:textColor="@color/pink_400"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/txtTicketFechaEstimada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pink_400"
                        android:text="18/10/2021"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Retira: "
                        android:paddingLeft="10dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/txtTicketContacto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contacto "/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Telefono: "
                        android:paddingLeft="10dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/txtTicketTelefono"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="19876532 "/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dirección: "
                        android:paddingLeft="10dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/txtTicketDireccion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Direccion  "/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/btnTicketMisPedidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtVerEnMisPedidos" />

    </LinearLayout>

</ScrollView>