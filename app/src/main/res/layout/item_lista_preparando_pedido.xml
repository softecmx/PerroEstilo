<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtNumeroOrdenProcesando"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtordenPedido"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/txtTotaldelPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtTotalAPagar"
            android:layout_toEndOf="@+id/txtNumeroOrdenProcesando"
            android:layout_marginLeft="150dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18dp"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/txtStatusPreparandoPedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txtPreparandoPedido"
        android:textColor="@color/yellow"
        android:textStyle="bold"
        android:textSize="20dp"/>

</LinearLayout>