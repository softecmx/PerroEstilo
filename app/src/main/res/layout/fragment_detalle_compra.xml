<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.cliente.comprar.detalleCompra.DetalleCompraFragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:backgroundTint="@color/auxiliar"
        android:elevation="5dp"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">
            <ImageView
                android:id="@+id/imgDetalleCompra"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:adjustViewBounds="true"
                android:padding="10dp"
                android:src="@drawable/monio_corbatin_anaranjado"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/imgDetalleCompra"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtNombreProductoDetCompra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txtNombreProducto"
                        android:textColor="@color/gray_100"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/valorNombreProductoDC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/txtNombreProductoDetCompra"
                        android:text="@string/monioCorbatin"
                        android:textColor="@color/gray_100"
                        android:textSize="17dp"
                        android:textStyle="normal" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtModeloProductoDetCompra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txtModelo"
                        android:textColor="@color/gray_100"
                        android:textSize="17dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/valorModeloProductoDC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/txtModeloProductoDetCompra"
                        android:textStyle="normal"
                        android:text="@string/modeloAnaranjado"
                        android:textColor="@color/gray_100"
                        android:textSize="17dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txtTallaProductoDetCompra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/adminAPtalla"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        android:textColor="@color/gray_100"/>
                    <TextView
                        android:id="@+id/valorTallaProductoDC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/txtTallaProductoDetCompra"
                        android:textStyle="normal"
                        android:text="@string/mediana"
                        android:textColor="@color/gray_100"
                        android:textSize="17dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txtCantidadProductoDetCompra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txtCantidad"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        android:textColor="@color/gray_100"/>
                    <TextView
                        android:id="@+id/valorCantidadProductoDC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/txtCantidadProductoDetCompra"
                        android:textStyle="normal"
                        android:text="@string/txtCantidad"
                        android:textColor="@color/gray_100"
                        android:textSize="17dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">
                    <TextView
                        android:id="@+id/txtSubtotalProductoDetCompra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txtSubtotal"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        android:textColor="@color/gray_100"/>
                    <TextView
                        android:id="@+id/valorSubtotalProductoDC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/txtSubtotalProductoDetCompra"
                        android:textStyle="normal"
                        android:text="@string/pago"
                        android:textColor="@color/gray_100"
                        android:textSize="17dp"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>