        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/flat_grey_dark_1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtDescripcion"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txtVerProdEditEditCarDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtDescripcion"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/btnEditCarEditEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/txtEditar" />

        <Button
            android:id="@+id/btnEditCarEditCancelar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtCancelar"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    </LinearLayout>
</ScrollView>